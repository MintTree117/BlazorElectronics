@page "/admin/seed"
@inherits AdminPage
@using BlazorElectronics.Client.Shared

<div class="container-sm form-wrapper mt-3">
    <PageLoader Page="@this"></PageLoader>
    
    @if ( PageIsReady() )
    {
        <div class="form-header">
            <h3>Seed Database</h3>
        </div>
        
        <EditForm Model="ProductCount" OnSubmit="( async () => await SeedProducts() )">
            <div class="mb-3">
                <label for="Products" class="form-label">Seed Products</label>
                <InputNumber @bind-Value="ProductCount.Value" class="form-control" id="Products"></InputNumber>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-success btn-icon">
                    <i class="oi oi-cloud-upload"></i> Submit
                </button>
            </div>
        </EditForm>

        <EditForm Model="ReviewCount" OnSubmit="( async () => await SeedReviews() )">
            <div class="mb-3">
                <label for="Reviews" class="form-label">Seed Reviews</label>
                <InputNumber @bind-Value="ReviewCount.Value" class="form-control" id="Reviews"></InputNumber>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-success btn-icon">
                    <i class="oi oi-cloud-upload"></i> Submit
                </button>
            </div>
        </EditForm>

        <EditForm Model="UserCount" OnSubmit="( async () => await SeedUsers() )">
            <div class="mb-3">
                <label for="Users" class="form-label">Seed Users</label>
                <InputNumber @bind-Value="UserCount.Value" class="form-control" id="Users"></InputNumber>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-success btn-icon">
                    <i class="oi oi-cloud-upload"></i> Submit
                </button>
            </div>
        </EditForm>
        
        <div class="mt-3">
            <AlertMessage Page="@this"></AlertMessage>
        </div>
    }
</div>