<div>
    @for ( int i = 0; i < 5; i++ )
    {
        if ( i < RoundedRating )
        {
            <span class="oi oi-star oi-star-checked"></span>   
        }
        else
        {
            <span class="oi oi-star"></span>   
        }
    }
</div>

@code
{
    [Parameter] public float Rating { get; set; }
    int RoundedRating;

    protected override void OnParametersSet()
    {
        base.OnParametersSet();
        RoundedRating = ( int ) Rating;
    }
}