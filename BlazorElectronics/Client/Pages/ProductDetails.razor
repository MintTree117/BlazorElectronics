@page "/product/{id:int}"
@using BlazorElectronics.Client.Services.Products
@using BlazorElectronics.Shared
@using BlazorElectronics.Shared.DataTransferObjects.Products
@inject IProductServiceClient ProductServiceClient

@if ( !_loaded || _productDetails == null )
{
    <span>@_serverMessage</span>
}
else {
    <div class="pd-page">
        <div class="pd-top">
            <div class="pd-images-wrapper">
                <div class="pd-img-selected-wrapper">
                    <img class="pd-img-selected" src="@_productDetails.ProductImages[ 0 ].Url" alt="@_productDetails.ProductTitle"/>
                </div>
                <div class="pd-img-selection">
                    @foreach ( ProductImage_DTO img in _productDetails.ProductImages )
                    {
                        <img class="pd-img-mini" src="@img.Url" alt="@_productDetails.ProductDescription"/>
                    }
                </div>
            </div>
            <div class="pd-summary">
                <!-- Display Product Title -->
                <h2 class="mb-0">@_productDetails.ProductTitle</h2>

                <!-- Get Selected Variant -->
                @if ( !GetSelectedVariant( out ProductVariant_DTO variant ) )
                {
                    <span>No Product Variants Found!</span>
                }

                <!-- Display Selected Variant Price -->
                @if ( variant.SalePrice > 0 && variant.SalePrice < variant.Price )
                {
                    <h6 class="text-muted">
                        $@variant.Price
                    </h6>
                    <h4 class="price">
                        $@variant.SalePrice
                    </h4>
                }
                else
                {
                    <h4 class="price">
                        $@variant.Price
                    </h4>
                }

                <!-- Display Variant Selection -->
                @if ( _productDetails.ProductVariants.Count > 1 )
                {
                    <div>
                        <select class="form-control" @bind="_currentVariantId">
                            @foreach ( ProductVariant_DTO v in _productDetails.ProductVariants )
                            {
                                <option value="@v.VariantId">@v.VariantName</option>
                            }
                        </select>
                    </div>
                }
            </div>
        </div>
        
        <!-- Display Product Details Content -->
        <div class="pd-content">
            <p>@_productDetails.ProductDescription</p>
        </div>
    </div>
}

@code {
    string _serverMessage = "Loading Product Details...";
    bool _loaded = false;

    ProductDetails_DTO? _productDetails = null;
    int _currentImageIndex = 0;
    int _currentVariantId = 1;

    [Parameter]
    public int Id { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        _serverMessage = "Loading Product Details...";

        ServiceResponse<ProductDetails_DTO?> response = await ProductServiceClient.GetProductDetails( Id );
        _loaded = true;

        if ( response.Data == null || !response.Success )
        {
            _serverMessage = response.Message ?? "Server error without a given message!";
            return;
        }

        _productDetails = response.Data;

        if ( _productDetails.ProductVariants.Count > 0 )
        {
            _currentVariantId = _productDetails.ProductVariants[ 0 ].VariantId;
        }
    }

    bool GetSelectedVariant( out ProductVariant_DTO variant )
    {
        variant = _productDetails!.ProductVariants.FirstOrDefault( v => v.VariantId == _currentVariantId )!;
        return variant != null;
    }
}