@page "/admin/categories/view"
@using BlazorElectronics.Shared.Admin.Categories
@using BlazorElectronics.Shared
@inherits AdminView

@if ( PageIsRedirecting )
{
    <div class="loading-container">
        <div class="loading-circle"></div>
        <p>@ViewMessage</p>
        <p>Redirecting in @PageRedirectCountdown...</p>
    </div>
}
else if ( !PageIsReady() )
{
    <span>@ViewMessage</span>
}
else
{
    <h3>Categories View</h3>
    
    if ( !string.IsNullOrWhiteSpace( ViewMessage ) )
    {
        <div class="@ViewMessageClass">
            <span>@ViewMessage</span>
        </div>
    }

    if ( !string.IsNullOrWhiteSpace( ActionMessage ) )
    {
        <div class="@ActionMessageClass">
            <span>@ActionMessage</span>
        </div>
    }
    
    <div class="row">
        <div class="col-4 px-3">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h4>@CategoryType.PRIMARY</h4>
                <button class="btn btn-primary" @onclick="( () => CreateNewCategory( CategoryType.PRIMARY ) )">
                    <i class="oi oi-plus"></i> Create New
                </button>
            </div>
            @foreach ( CategoryPrimaryViewDto p in _categorieses.Primary )
            {
                <div class="row admin-view-row align-items-center">
                    <div class="col">
                        @p.PrimaryCategoryId
                    </div>
                    <div class="col">
                        @p.Name
                    </div>
                    <div class="col text-nowrap">
                        <button class="btn btn-primary" @onclick="( () => EditCategory( p.PrimaryCategoryId, CategoryType.PRIMARY ) )">
                            <i class="oi oi-pencil"></i>
                        </button>
                        <button class="btn btn-primary" @onclick="(async () => await RemoveCategory( p.PrimaryCategoryId, CategoryType.PRIMARY ) )">
                            <i class="oi oi-trash"></i>
                        </button>
                    </div>
                </div>
            }
        </div>
        <div class="col-4 px-3">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h4>@CategoryType.SECONDARY</h4>
                <button class="btn btn-primary" @onclick="( () => CreateNewCategory( CategoryType.SECONDARY ) )">
                    <i class="oi oi-plus"></i> Create New
                </button>
            </div>
            @foreach ( CategorySecondaryViewDto s in _categorieses.Secondary )
            {
                <div class="row admin-view-row align-items-center">
                    <div class="col">
                        @s.SecondaryCategoryId
                    </div>
                    <div class="col">
                        @s.Name
                    </div>
                    <div class="col text-nowrap">
                        <button class="btn btn-primary" @onclick="( () => EditCategory( s.SecondaryCategoryId, CategoryType.SECONDARY ) )">
                            <i class="oi oi-pencil"></i>
                        </button>
                        <button class="btn btn-primary" @onclick="( async () => await RemoveCategory( s.SecondaryCategoryId, CategoryType.SECONDARY ) )">
                            <i class="oi oi-trash"></i>
                        </button>
                    </div>
                </div>
            }
        </div>
        <div class="col-4 px-3">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h4>@CategoryType.TERTIARY</h4>
                <button class="btn btn-primary" @onclick="( () => CreateNewCategory( CategoryType.TERTIARY ) )">
                    <i class="oi oi-plus"></i> Create New
                </button>
            </div>
            @foreach ( CategoryTertiaryViewDto t in _categorieses.Tertiary )
            {
                <div class="row admin-view-row align-items-center">
                    <div class="col">
                        @t.TertiaryCategoryId
                    </div>
                    <div class="col">
                        @t.Name
                    </div>
                    <div class="col text-nowrap">
                        <button class="btn btn-primary" @onclick="( () => EditCategory( t.TertiaryCategoryId, CategoryType.TERTIARY ) )">
                            <i class="oi oi-pencil"></i>
                        </button>
                        <button class="btn btn-primary" @onclick="( async () => await RemoveCategory( t.TertiaryCategoryId, CategoryType.TERTIARY ) )">
                            <i class="oi oi-trash"></i>
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>   
}