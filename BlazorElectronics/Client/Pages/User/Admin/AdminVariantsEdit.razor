@page "/admin/variants/edit"

@inherits AdminView

<div class="container-sm">
    @if ( PageIsRedirecting )
    {
        <div class="loading-container">
            <div class="loading-circle"></div>
            <p>@ViewMessage</p>
            <p>Redirecting in @PageRedirectCountdown...</p>
        </div>
    }
    else if ( !PageIsReady() )
    {
        <span>@ViewMessage</span>
    }
    else
    {
        if ( _newVariant )
        {
            <h3>Create New Variant</h3>
        }
        else
        {
            <h3>Edit Variant</h3>
        }
        
        <EditForm Model="_dto" OnSubmit="( async () => await Submit() )">
            <div class="mb-3">
                <label for="Name" class="form-label">Name</label>
                <InputText @bind-Value="_dto.VariantName" class="form-control" id="Name"></InputText>
            </div>
            <div class="mb-3">
                <label for="Values" class="form-label">Values, Separate by Comma</label>
                <InputTextArea @bind-Value="_dto.VariantValues" class="form-control" id="Values"></InputTextArea>
            </div>
            <button type="submit" class="btn btn-primary">
                <i class="oi oi-cloud-upload"></i>
            </button>
        </EditForm>

        if ( !string.IsNullOrWhiteSpace( ActionMessage ) )
        {
            <div class="@ActionMessageClass">
                <span>@ActionMessage</span>
            </div>
        }
    }
</div>