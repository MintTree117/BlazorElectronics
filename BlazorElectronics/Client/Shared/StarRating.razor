@for ( int i = 0; i < 5; i++ )
{
    if ( i <= Rating )
    {
        <span class="fa fa-star fa-star-checked"></span>   
    }
    else
    {
        <span class="fa fa-star"></span>   
    }
}

@code
{
    [Parameter] public float Rating { get; set; }
    int RoundedRating;

    protected override void OnParametersSet()
    {
        base.OnParametersSet();
        RoundedRating = ( int ) Math.Round( Rating );
    }
}